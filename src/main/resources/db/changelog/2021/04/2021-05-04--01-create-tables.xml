<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="Gelnaz" id="04052021-1">
        <createTable tableName="user_entity">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="entity_user_pkey"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(55)"/>
            <column name="technologies" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(12)"/>
            <column name="another_phone" type="VARCHAR(12)"/>
            <column name="skype" type="VARCHAR(255)"/>
            <column name="telegram" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_delete" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Gelnaz" id="04052021-2">
        <createTable tableName="role">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="role_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="Gelnaz" id="04052021-3">
        <createTable tableName="direction">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="direction_pkey"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="Gelnaz" id="04052021-4">
        <createTable tableName="post">
            <column autoIncrement="true" name="id" type="BIGINT" >
                <constraints unique="true" nullable="false" primaryKey="true" primaryKeyName="post_pkey"/>
            </column>
            <column name="date" type="DATE"/>
            <column name="user_id" type="BIGINT"/>
            <column name="topic" type="VARCHAR(255)"/>
            <column name="content" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="post" baseColumnNames="user_id"
                                 constraintName="post_user_id"
                                 referencedTableName="user_entity" referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="Gelnaz" id="04052021-5">
        <createTable tableName="comment">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="comment_pkey"/>
            </column>
            <column name="date" type="DATE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGINT"/>
            <column name="post_id" type="BIGINT"/>
            <column name="content" type="VARCHAR(255)"/>

        </createTable>
        <addForeignKeyConstraint baseTableName="comment" baseColumnNames="user_id"
                                 constraintName="comment_user_id"
                                 referencedTableName="user_entity" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="comment" baseColumnNames="post_id"
                                 constraintName="comment_post_id"
                                 referencedTableName="post" referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="Gelnaz" id="04052021-6">
        <createTable tableName="tag">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="tag_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Gelnaz" id="04052021-9">
        <createTable tableName="user_role">
            <column name="user_id" type="BIGINT"/>
            <column name="role_id" type="INT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_role" baseColumnNames="user_id"
                                 constraintName="user_role_user_id"
                                 referencedTableName="user_entity" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="user_role" baseColumnNames="role_id"
                                 constraintName="user_role_role_id"
                                 referencedTableName="role" referencedColumnNames="id"/>
    </changeSet>
    <changeSet author="Gelnaz" id="04052021-10">
        <createTable tableName="post_tag">
            <column name="post_id" type="BIGINT"/>
            <column name="tag_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="post_tag" baseColumnNames="post_id"
                                 constraintName="post_tag_post_id"
                                 referencedTableName="post" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="post_tag" baseColumnNames="tag_id"
                                 constraintName="post_tag_tag_id"
                                 referencedTableName="tag" referencedColumnNames="id"/>
    </changeSet>
    <changeSet author="Gelnaz" id="04052021-11">
        <createTable tableName="user_direction">
            <column name="user_id" type="BIGINT"/>
            <column name="direction_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_direction" baseColumnNames="user_id"
                                 constraintName="user_direction_user_id"
                                 referencedTableName="user_entity" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="user_direction" baseColumnNames="direction_id"
                                 constraintName="user_direction_direction_id"
                                 referencedTableName="direction" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
