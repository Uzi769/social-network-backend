<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="Gelnaz" id="07052021-1">
        <createTable tableName="picture">
            <column autoIncrement="true" name="id" type="BIGINT" >
                <constraints nullable="false" primaryKey="true" primaryKeyName="picture_pkey"/>
            </column>
            <column name="url" type="VARCHAR(255)"/>
            <column name="post_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="picture" baseColumnNames="post_id"
                                 constraintName="picture_post_id"
                                 referencedTableName="content" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
